local DropdownFrame = Instance.new("Frame")
DropdownFrame.Size = UDim2.new(0.8, 0, 0, 100)
DropdownFrame.Position = UDim2.new(0.1, 0, 0.05, 0)
DropdownFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
DropdownFrame.Parent = BanContent
Instance.new("UICorner", DropdownFrame).CornerRadius = UDim.new(0, 10)

local ScrollingFrame = Instance.new("ScrollingFrame")
ScrollingFrame.Size = UDim2.new(1, 0, 1, 0)
ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
ScrollingFrame.ScrollBarThickness = 6
ScrollingFrame.BackgroundTransparency = 1
ScrollingFrame.Parent = DropdownFrame

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Padding = UDim.new(0, 4)
UIListLayout.Parent = ScrollingFrame

local function refreshPlayers()
	for _, child in ipairs(ScrollingFrame:GetChildren()) do
		if child:IsA("TextButton") then child:Destroy() end
	end

	local function createButton(name)
		local button = Instance.new("TextButton")
		button.Size = UDim2.new(1, -4, 0, 30)
		button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
		button.Text = name
		button.TextColor3 = Color3.fromRGB(255, 255, 255)
		button.Font = Enum.Font.GothamBold
		button.TextScaled = true
		button.Parent = ScrollingFrame
		Instance.new("UICorner", button).CornerRadius = UDim.new(0, 6)

		button.MouseButton1Click:Connect(function()
			SelectedPlayer = name
		end)
	end

	createButton("All Players")

	for _, p in ipairs(Players:GetPlayers()) do
		if p ~= Player then
			createButton(p.Name)
		end
	end

	task.wait(0.1)
	ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, UIListLayout.AbsoluteContentSize.Y + 10)
end
refreshPlayers()

Players.PlayerAdded:Connect(refreshPlayers)
Players.PlayerRemoving:Connect(refreshPlayers)

local ToggleBan = Instance.new("TextButton")
ToggleBan.Size = UDim2.new(0.8, 0, 0, 60)
ToggleBan.Position = UDim2.new(0.1, 0, 0.55, 0)
ToggleBan.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
ToggleBan.Text = "Toggle Auto Ban"
ToggleBan.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleBan.Font = Enum.Font.GothamBold
ToggleBan.TextScaled = true
ToggleBan.Parent = BanContent
Instance.new("UICorner", ToggleBan).CornerRadius = UDim.new(0, 10)

local StatusBan = Instance.new("TextLabel")
StatusBan.Size = UDim2.new(1, 0, 0, 40)
StatusBan.Position = UDim2.new(0, 0, 0.83, 0)
StatusBan.BackgroundTransparency = 1
StatusBan.Text = "Status: ‚ùå OFF"
StatusBan.TextColor3 = Color3.fromRGB(255, 80, 80)
StatusBan.Font = Enum.Font.GothamBold
StatusBan.TextScaled = true
StatusBan.Parent = BanContent

-----------------------------
-- BUTTON CONNECTIONS
-----------------------------
WinsTab.MouseButton1Click:Connect(function()
	ActiveTab = "Wins"
	WinsContent.Visible = true
	BanContent.Visible = false
	WinsTab.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
	BanTab.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
end)

BanTab.MouseButton1Click:Connect(function()
	ActiveTab = "Ban"
	WinsContent.Visible = false
	BanContent.Visible = true
	BanTab.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
	WinsTab.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
end)

ToggleWins.MouseButton1Click:Connect(function()
	AutoGetWins = not AutoGetWins
	if AutoGetWins then
		ToggleWins.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
		StatusWins.Text = "Status: üèÉ Active"
		StatusWins.TextColor3 = Color3.fromRGB(255, 255, 120)
	else
		ToggleWins.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
		StatusWins.Text = "Status: ‚ùå OFF"
		StatusWins.TextColor3 = Color3.fromRGB(255, 80, 80)
	end
end)

ToggleBan.MouseButton1Click:Connect(function()
	AutoBan = not AutoBan
	if AutoBan then
		ToggleBan.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
		StatusBan.Text = "Status: üî® Active"
		StatusBan.TextColor3 = Color3.fromRGB(255, 255, 120)
	else
		ToggleBan.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
		StatusBan.Text = "Status: ‚ùå OFF"
		StatusBan.TextColor3 = Color3.fromRGB(255, 80, 80)
	end
end)

-----------------------------
-- MAIN LOOPS
-----------------------------
task.spawn(function()
	while Running do
		if AutoGetWins then
			local char = Player.Character or Player.CharacterAdded:Wait()
			if char and char:FindFirstChild("HumanoidRootPart") then
				char:MoveTo(WinPosition)
			end
		end
		task.wait(0.5)
	end
end)

task.spawn(function()
	while Running do
		if AutoBan and SelectedPlayer then
			if SelectedPlayer == "All Players" then
				for _, p in ipairs(Players:GetPlayers()) do
					if p ~= Player then
						ReplicatedStorage:WaitForChild("BanRequest"):FireServer(p.Name, "Ban5Min")
					end
				end
			else
				ReplicatedStorage:WaitForChild("BanRequest"):FireServer(SelectedPlayer, "Ban5Min")
			end
		end
		task.wait(1)
	end
end)

-----------------------------
-- UI MOVEMENT + BUTTONS
-----------------------------
MinimizeButton.MouseButton1Click:Connect(function()
	Minimized = not Minimized
	if Minimized then
		WinsContent.Visible = false
		BanContent.Visible = false
		TabFrame.Visible = false
		Frame:TweenSize(UDim2.new(0, 380, 0, 40), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
		MinimizeButton.Text = "‚ûï"
	else
		Frame:TweenSize(UDim2.new(0, 380, 0, 280), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.3, true)
		task.wait(0.3)
		TabFrame.Visible = true
		if ActiveTab == "Wins" then
			WinsContent.Visible = true
		else
			BanContent.Visible = true
		end
		MinimizeButton.Text = "‚ûñ"
	end
end)

CloseButton.MouseButton1Click:Connect(function()
	Running = false
	ScreenGui:Destroy()
end)

--// Movable
local dragging = false
local dragStart, startPos

local function update(input)
	local delta = input.Position - dragStart
	Frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

TitleBar.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = Frame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
		update(input)
	end
end)
